@model LegoShop.Data.Entities.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły produktu</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MosaicType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MosaicType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FrameSize)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FrameSize)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FrameColor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FrameColor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" alt="Obrazek" width="200" height="200" />
        </dd>

    </dl>
</div>

<div class="obok">
    <a asp-action="Edit" class="edytuj" asp-route-id="@Model?.Id">Edytuj produkt</a>
    <a asp-action="Delete" class="delete_det" asp-route-id="@Model?.Id">Usuń produkt</a>
    <a asp-action="Index" class="back_det">Wróc do listy produktów</a>
</div>
<style>
    div a {
        display: inline-flex !important;
        margin-right: 10px;
    }
</style>
